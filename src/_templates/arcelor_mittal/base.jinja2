{% import "factories/cards.jinja2" as cards_factory %}
{% import "factories/content.jinja2" as content_factory %}
{% import "factories/sidebar.jinja2" as sidebar_factory %}

<!DOCTYPE html>
<html lang="en">
    {% include "includes/head.jinja2" %}

    {% if message and message != "" %}
        {%  set overflow = "" %}
    {% else %}
        {%  set overflow = "overflow-hidden" %}
    {% endif %}

    <body class="sb-nav-fixed {{ overflow }}">
        {% include "includes/nav.jinja2" %}
        {% include "includes/notifications.jinja2" %}

        <div id="page_wrapper">
            <div id="sidebar_wrapper">
                {% include "includes/sidebar.jinja2" %}
            </div>

            <div id="content_wrapper">
                <main>
                    <div id="notebook_wrapper" class="container-fluid p-0">
                        {% block page_title %}
                        {% endblock %}

                        {% block content %}
                        {% endblock %}
                    </div>
                </main>
            </div>
        </div>

        {% include "includes/js.jinja2" %}

        {% block specific_scripts %}
        {% endblock %}
    </body>
</html>
