{% import "factories/cards.jinja2" as cards_factory %}
{% import "factories/content.jinja2" as content_factory %}
{% import "factories/sidebar.jinja2" as sidebar_factory %}

<!DOCTYPE html>
<html lang="en">
    {% include "includes/head.jinja2" %}

    <body class="sb-nav-fixed overflow-hidden">
        {% include "includes/nav.jinja2" %}

        <div id="page_wrapper">
            <div id="sidebar_wrapper">
                {% include "includes/sidebar.jinja2" %}
            </div>

            <div id="content_wrapper">
                <main>
                    <div id="busy_wrapper" class="row p-0 col-12 mt-5">
                        <img src="{{ static('assets/img/wait.gif') }}" class="mx-auto" style="width: 150px" />
                    </div>

                    <div id="notebook_wrapper" class="container-fluid p-0" style="display: none">
                        {% block page_title %}
                        {% endblock %}

                        {% block content %}
                        {% endblock %}
                    </div>
                </main>
            </div>
        </div>

        {% include "includes/js.jinja2" %}

        {% block specific_scripts %}
        {% endblock %}
    </body>
</html>
